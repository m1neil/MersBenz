<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/colorBackground"
	tools:context=".RegistrationActivity">

	<RelativeLayout
		android:id="@+id/relativeLayout"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="81dp"
		android:background="@drawable/circle_back"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintHorizontal_bias="0.498"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent">

		<TextView
			android:id="@+id/textView"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerHorizontal="true"
			android:layout_centerVertical="true"
			android:text="M"
			android:textColor="@color/white"
			android:textSize="36sp"
			android:textStyle="bold" />
	</RelativeLayout>

	<TextView
		android:id="@+id/textView2"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="60dp"
		android:text="Sign Up"
		android:textSize="20sp"
		android:textStyle="bold"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/relativeLayout" />

	<TextView
		android:id="@+id/textView3"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="17dp"
		android:text="Find your dream car!"
		android:textSize="16sp"
		android:textStyle="normal"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintHorizontal_bias="0.5"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/textView2" />

	<androidx.constraintlayout.widget.ConstraintLayout
		android:id="@+id/constrainLayoutName"
		android:elevation="5dp"
		android:background="@drawable/back_input"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="27dp"
		android:layout_marginStart="15dp"
		android:layout_marginEnd="15dp"
		android:paddingStart="24dp"
		android:paddingTop="20dp"
		android:paddingEnd="24dp"
		android:paddingBottom="20dp"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/textView3">

		<ImageView
			android:id="@+id/iconFirstName"
			android:layout_width="24dp"
			android:layout_height="24dp"
			android:src="@drawable/icon_account"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintVertical_bias="0.5" />

		<EditText
			android:id="@+id/editTextUserName"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginStart="35dp"
			android:background="@null"
			android:maxLines="1"
			android:hint="Full name"
			android:textColor="#A8AFB9"
			android:textStyle="bold"
			app:layout_constraintStart_toEndOf="@+id/iconFirstName"
			app:layout_constraintTop_toTopOf="parent" />

	</androidx.constraintlayout.widget.ConstraintLayout>

	<androidx.constraintlayout.widget.ConstraintLayout
		android:id="@+id/constrainLayoutEmail"
		android:elevation="5dp"
		android:background="@drawable/back_input"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="20dp"
		android:layout_marginStart="15dp"
		android:layout_marginEnd="15dp"
		android:paddingStart="24dp"
		android:paddingTop="20dp"
		android:paddingEnd="24dp"
		android:paddingBottom="20dp"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/constrainLayoutName">

		<ImageView
			android:id="@+id/iconFirstName"
			android:layout_width="24dp"
			android:layout_height="24dp"
			android:src="@drawable/icon_account"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintVertical_bias="0.5" />

		<EditText
			android:id="@+id/editTextUserName"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginStart="35dp"
			android:background="@null"
			android:maxLines="1"
			android:hint="Full name"
			android:textColor="#A8AFB9"
			android:textStyle="bold"
			app:layout_constraintStart_toEndOf="@+id/iconFirstName"
			app:layout_constraintTop_toTopOf="parent" />

	</androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>